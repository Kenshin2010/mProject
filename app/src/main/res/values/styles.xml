<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="CustomFont">

        <item name="color">@color/custom</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/custom</item>
    </style>

    <style name="EmojiconGridView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:columnWidth">40dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

</resources>
