<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bgchat"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.manroid.devchat.activity.ChatActivity">

    <ListView
        android:id="@+id/lvChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <vn.manroid.devchat.EmojiconEditText
            android:textColor="#000"
            android:padding="2dp"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edtMessage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            emojicon:emojiconSize="25sp"
            android:hint="Type your mesage" />
        <Button
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/emoji"
            android:id="@+id/btnEmoji"
            android:layout_width="50dp"
            android:layout_height="55dp" />

        <Button
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/sendsms"
            android:id="@+id/btnSend"
            android:layout_width="50dp"
            android:layout_height="55dp" />
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>
